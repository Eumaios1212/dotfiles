set linenumbers		# Turns on Nanoâ€™s absolute line-number column

###############################################################################
# Hard-wrap at 80 columns (and re-wrap hotkey)
###############################################################################
set fill 80               # insert real newline at column 80
bind M-Q justify main     # Alt-Q re-flows the current paragraph

set guidestripe 80
set guidecolor brightblack
set autoindent
